<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_startStartedService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4511E"
        android:text="Start started service"/>

    <Button
        android:id="@+id/btn_stopStartedService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4511E"
        android:text="Stop started service"/>

    <Button
        android:id="@+id/btn_printTimeStap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00ACC1"
        android:text="print time stap"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Stamp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/btn_startBoundService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ACC1"
        android:text="Start bound service"/>

    <Button
        android:id="@+id/btn_stopBoundService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ACC1"
        android:text="Stop bound service"/>

    <Button
        android:id="@+id/btn_startIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7CB342"
        android:layout_marginTop="20dp"
        android:text="Start intent service"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:hint="Add Text"/>

    <Button
        android:id="@+id/btn_stopIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7CB342"
        android:text="Stop intent service"/>


</LinearLayout>